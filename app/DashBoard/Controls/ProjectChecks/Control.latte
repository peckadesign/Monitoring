{snippet tabs}
	<ul class="nav nav-tabs" role="tablist">
		{foreach $tabs as $key => $tab}
			<li role="presentation" n:class="$iterator->first ? active"><a href="#{$key}" aria-controls="{$key}" role="tab" data-toggle="tab" class="{$tab|tabColor}">{$tab->getTitle()}</a></li>
		{/foreach}
	</ul>
{/snippet}

<div class="tab-content">
	{foreach $checks as $type => $checksForType}
		<div role="tabpanel" n:class="tab-pane, $iterator->first ? active" id="{$type}">
			{foreach $checksForType as $checkId => $check}
				{first 3}<div class="row">{/first}
				<div class="col-md-4">
					{control check-$checkId}
				</div>
				{last 3}</div>{/last}
			{/foreach}
		</div>
	{/foreach}
</div>
