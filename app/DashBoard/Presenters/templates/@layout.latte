<!DOCTYPE html>
<html lang="en">
	<head>
		<meta charset="utf-8">
		<meta http-equiv="X-UA-Compatible" content="IE=edge">
		<meta name="viewport" content="width=device-width, initial-scale=1">
		<title>{ifset #title}{include #title} &ndash; {/ifset}Pecka Monitoring</title>

		<!-- Bootstrap -->
		<link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css" integrity="sha384-BVYiiSIFeK1dGmJRAkycuHAHRg32OmUcww7on3RYdg4Va+PmSTsz/K68vbdEjh4u" crossorigin="anonymous">

		<style>
			body {
				padding-top: 60px;
				padding-bottom: 20px;
			}

			.navbar-inverse {
				background-color: #003453;
				border-color: #003453;
			}
		</style>
	</head>
	<body>

		<nav class="navbar navbar-inverse navbar-fixed-top">
			<div class="container">
				<div class="navbar-header">
					<a class="navbar-brand" n:href=":DashBoard:HomePage:"><span class="glyphicon glyphicon-eye-open" aria-hidden="true"></span> Pecka Monitoring<sup>beta</sup></a>
				</div>
				<div id="navbar" class="navbar-collapse collapse navbar-right">
					{control lastRefresh}
					{control logout}
				</div>
			</div>
		</nav>

		<div class="container">

			{foreach $flashes as $flashMessage}
				<div class="alert alert-{$flashMessage->type}" role="alert">
					<span class="alert-link">{$flashMessage->message}</span>
				</div>
			{/foreach}


			<div class="row">
				{ifset #menu}
					<div class="col-md-4">
						{include #menu}
					</div>
					<div class="col-md-8">
						<div class="page-header">
							<h1 n:ifset="#title">{include #title}</h1>
						</div>
						{include #content}
					</div>
				{else}
					<div class="page-header">
						<h1 n:ifset="#title">{include #title}</h1>
					</div>
					{include #content}
				{/ifset}
			</div>
		</div>

		<script src="https://ajax.googleapis.com/ajax/libs/jquery/1.12.4/jquery.min.js"></script>
		<script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/js/bootstrap.min.js" integrity="sha384-Tc5IQib027qvyjSMfHjOMaLkfuWVxZxUPnCJA7l2mCWNIpG9mGCD8wGNIcPD7Txa" crossorigin="anonymous"></script>

	</body>
</html>
