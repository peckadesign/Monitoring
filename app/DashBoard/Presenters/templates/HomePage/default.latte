{default $projects = []}

{block content}
	{if count($favoriteProjects)}
		<div class="row">
			{foreach $favoriteProjects as $item}
				{var $project = $item->project}
				<div class="col-md-4">
					{control project-$project->id}
				</div>
			{/foreach}
		</div>
		<hr>
	{/if}

	<div class="row">
		{foreach $projects as $project}
			<div class="col-md-4">
				{control project-$project->id}
			</div>
		{/foreach}
	</div>

	{control refresh}

{/block}

{block title}
	Dashboard
{/block}

{block buttons}
	<div class="buttons">
		<div class="btn-group">
			<a n:href="Project:add" class="btn btn-success" n:if="$user->isAllowed('project', 'add')"><span class="glyphicon glyphicon-plus" aria-hidden="true"></span> Přidat nový projekt</a>
		</div>
	</div>
{/block}
